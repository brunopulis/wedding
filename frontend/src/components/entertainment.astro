---
import Heart from 'components/heart.astro';
---
<section class="entertainment" id="entertainment" aria-labelledby="entertainment-title">
    <div class="container">
      <div class="row">
        <div class="col-xl-12 text-center">
          <h2 class="section-title text-center" id="entertainment-title">Atrações turísticas</h2>
          <Heart />
        </div>

        <div class="row"> 
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <img class="card-img-top" src="/images/atrativos/museu-imperial.avif" alt="" height="200" width="362" />
            
              <div class="card-body descricao">
                <h3 class="card-title text-black">Museu Imperial</h3>
                <div class="card-text funcionamento">
                  <p>Informações: (24) 98176-0034</p>
                  <p>Rua da Imperatriz, 220 – Centro</p>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card atrativo-box">
              <img class="card-img-top" src="/images/atrativos/cervejaria-bohemia.avif" alt="" height="200" width="362" />
