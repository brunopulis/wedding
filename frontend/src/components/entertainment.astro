  <style lang="scss">
    .services {
      background: var(--standard);
    }
    .services,
    .entertainment {
      padding: 100px 0;
    }
  
    .section-title {
      color: var(--olive);
      font-weight: 700;
      margin-bottom: 10px;
    }
  
    .card {
      margin-bottom: 20px;
  
      &-title {
        font-size: 20px;
        font-weight: 700;
      }
    }
  </style>