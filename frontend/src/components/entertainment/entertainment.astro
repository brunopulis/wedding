---
import Heart from 'components/heart.astro';
---
<section class="entertainment" id="entertainment" aria-labelledby="entertainment-title">
    <div class="container">
      <div class="row">
        <div class="col-xl-12 text-center mb-20">
          <h2 class="section-title text-center" id="entertainment-title">Atrações turísticas</h2>
          <Heart />
        </div>

        <div class="row"> 
          <div class="col-xs-12 col-sm-6 col-md-4">
            <article class="card">
              <picture>
                <source srcset="/images/atrativos/museu-imperial.webp" type="image/webp">
                <source srcset="/images/atrativos/museu-imperial.jpg" type="image/jpeg">
                <img class="card-img-top" src="/images/atrativos/museu-imperial.jpg" alt="" loading="lazy" height="200" width="362" />
              </picture>
              
              <div class="card-body descricao">
                <h3 class="card-title text-black">Museu Imperial</h3>
                <div class="card-text funcionamento">
                  <p>Informações: <a href="tel:+5524981760026">(24) 98176-0026</a> <br> Rua da Imperatriz, 220 – Centro</p>
                </div>
              </div>
            </article>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-4">
            <article class="card atrativo-box">
              <picture>
                <source srcset="/images/atrativos/cervejaria-bohemia.webp" type="image/webp">
                <source srcset="/images/atrativos/cervejaria-bohemia.jpg" type="image/jpeg">
                <img class="card-img-top" src="/images/atrativos/cervejaria-bohemia.jpg" alt="" loading="lazy" height="200" width="362" />
              </picture>

              <div class="card-body descricao">
                <h3 class="card-title">Cervejaria Bohemia</h3>
                <div class="card-text funcionamento">
                  <p>Informações: <a href="tel:+55242029050">(24) 2020-9050</a> <br> Rua Alfredo Pachá, 166 – Centro</p>
                </div>
              </div>
            </article>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-4">
            <article class="card atrativo-box">
              <picture>
                <source srcset="/images/atrativos/palacio-quitandinha.webp" type="image/webp">
                <source srcset="/images/atrativos/palacio-quitandinha.jpg" type="image/jpeg">
                <img class="card-img-top" src="/images/atrativos/palacio-quitandinha.jpg" alt="" loading="lazy" height="200" width="362" />
              </picture>

              <div class="card-body descricao">
                <h3 class="card-title">Palácio de Quitandinha</h3>
                <div class="card-text funcionamento">
                  <p>Informações: <a href="tel:+552422452020">(24) 2245-2020</a> <br> Avenida Joaquim Rolla, 2 – Quitandinha</p>
                </div>
              </div>
            </article>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-4">
            <article class="card atrativo-box">
              <picture>
                <source srcset="/images/atrativos/museu-brinquedo.webp" type="image/webp">
                <source srcset="/images/atrativos/museu-brinquedo.jpg" type="image/jpeg">
                <img class="card-img-top" src="/images/atrativos/museu-brinquedo.jpg" alt="" loading="lazy" height="200" width="362" />
              </picture>
             
              <div class="card-body descricao">
                <h3 class="card-title">Museu dos brinquedos</h3>
                <div class="card-text funcionamento">
                  <p>Informações: <a href="tel:+5524981760034">(24) 98176-0034</a> <br> Av. Barão de Amazonas, 25 – Centro</p>
                </div>
              </div>
            </article>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-4">
            <article class="card atrativo-box">
              <picture>
                <source srcset="/images/atrativos/museu-de-cera.webp" type="image/webp">
                <source srcset="/images/atrativos/museu-de-cera.jpg" type="image/jpeg">
