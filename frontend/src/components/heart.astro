---
import Icon from 'astro-icon';
---

<div class="heart-divider">
  <span class="grey-line"></span>
  <Icon name="mdi:heart" class="pink-heart" width="25" height="21" aria-hidden="true" />
  <Icon name="mdi:heart" class="grey-heart" width="25" height="21" aria-hidden="true" />
  <span class="grey-line"></span>
</div>

<style lang="scss">
  .grey-line {
    width: 30px;
    height: 8px;
    display: inline-block;
    border-top: solid 2px #e1dddd;
  }

  .pink-heart {
    color: var(--olive);
  }

  .grey-heart {
    color: #e1dddd;
    font-size: 18px;
    margin-left: -15px;
    position: relative;
    z-index: 2;
  }
</style>